    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "nodemailer": "^6.9.9",
    "pdfkit": "^0.15.0",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "qrcode": "^1.5.3",
